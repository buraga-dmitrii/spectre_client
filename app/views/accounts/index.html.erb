<%- model_class = Account -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <h3>
    <%= "Login ##{@login.login_id}" %>
  </h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:account_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:balance) %></th>
      <th><%= model_class.human_attribute_name(:currency) %></th>
      <th><%= model_class.human_attribute_name(:nature) %></th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= link_to account.account_id,  transactions_path(account_id: account.id) %></td>
        <td><%= account.name %></td>
        <td><%= account.balance %></td>
        <td><%= account.currency %></td>
        <td><%= account.nature %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to t('.back', :default => t("helpers.links.back")),
              logins_path, :class => 'btn btn-default'  %>

<%= link_to 'Refresh data',
            accounts_refresh_path,
            :class => 'btn btn-primary' %>              
