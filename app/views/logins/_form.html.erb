<%= form_for @login, :html => { :class => "form-horizontal login" } do |f| %>

  <% if @login.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@login.errors.count, "error") %> prohibited this login from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @login.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :login_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :login_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:login_id) %>
  </div>
  <div class="form-group">
    <%= f.label :hashid, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :hashid, :class => 'form-control' %>
    </div>
    <%=f.error_span(:hashid) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>
  <div class="form-group">
    <%= f.label :provider, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :provider, :class => 'form-control' %>
    </div>
    <%=f.error_span(:provider) %>
  </div>
  <div class="form-group">
    <%= f.label :customer_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :customer_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:customer_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                logins_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
